<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".view.activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/purple"
        >

        <EditText
            android:layout_width="304dp"
            android:layout_height="46dp"
            android:layout_marginLeft="125px"
            android:background="@color/colorWhite"
            android:hint="Search Wayfair"
            android:layout_marginTop="8dp"
            android:cursorVisible="false"
            android:textSize="53px"
            />

        <ImageView
            android:layout_width="90px"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="36px"
            android:scaleType="centerInside"
            android:background="@color/colorWhite"
            android:src="@drawable/search"
            />
        <ImageView
            android:layout_width="120px"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="360dp"
            android:scaleType="centerInside"
            android:background="@color/purple"
            android:src="@drawable/shopingcart"
            />
    </RelativeLayout>
    <!--                      w                      w             w       -->
        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="168px"/>

        <!--分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="166px"
            android:background="#c8c8c8"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"

            android:orientation="horizontal"
            >


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/parent_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
               android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/home"
                    android:scaleType="centerCrop" />
            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/parent_house"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_house"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/sales"
                    android:scaleType="centerCrop" />

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/parent_buy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_buy"
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/myboard"
                    />
            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/parent_service"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="45dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_service"
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/account"
                    />

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoRelativeLayout>
