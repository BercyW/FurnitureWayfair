<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".view.activities.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/purple"
        android:id="@+id/relativeLayout_header"
        >

        <EditText
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_marginLeft="30px"
            android:background="@color/colorWhite"
            android:hint="Search Wayfair"
            android:layout_marginTop="8dp"
            android:cursorVisible="false"
            android:paddingLeft="54dp"
            android:textSize="45px"
            />

        <ImageView
            android:layout_width="80px"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="84px"
            android:scaleType="centerInside"
            android:background="@color/colorWhite"
            android:src="@drawable/search"
            />
        <ImageView
            android:layout_width="120px"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="310dp"
            android:scaleType="centerInside"
            android:background="@color/purple"
            android:src="@drawable/shopingcart"
            />
    </RelativeLayout>
    <!--                      w                      w             w       -->
   <com.zhy.autolayout.AutoLinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/linearLayout_detail_pic"
       android:layout_below="@+id/relativeLayout_header"
       >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/tv_header"
        android:background="@drawable/detail_bed_header"
        />

   </com.zhy.autolayout.AutoLinearLayout>



    <!--fdfdfdffdfdffdf-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout_detail_pic"
        >


    <!--tupiaan-->
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_leader_img"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal" />

    <!--引导页指示器-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"

        >

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/activity_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/shape_leader_circle_f0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/shape_leader_circle_f0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/shape_leader_circle_f0" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/activity_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:scaleType="centerCrop"
            android:src="@drawable/shape_leader_circle_pet" />
    </com.zhy.autolayout.AutoRelativeLayout>



        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/view_in_room"
                android:background="@drawable/viewinroom"
                />

        </com.zhy.autolayout.AutoLinearLayout>



    </com.zhy.autolayout.AutoLinearLayout>









    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="166px"
        android:background="#c8c8c8"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"

        android:orientation="horizontal"
        >


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/parent_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:background="@drawable/hometouming"
                android:scaleType="centerCrop" />
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/parent_sales"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_sales"
                android:layout_width="38dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:background="@drawable/sales"
                android:scaleType="centerCrop" />

        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/parent_myboard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="43dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_myboard"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/myboard"
                />
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/parent_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="43dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_account"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/account"
                />

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoRelativeLayout>
